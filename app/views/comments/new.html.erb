<h1>Comment#new</h1>
<p>Find me in app/views/comment/new.html.erb</p>

<%= form_for @comment do |f| %>
  <%= f.label :name, class: "form_label" %>
  <%= f.text_field :name %>

  <%= f.label :user_comment, class: "form_label" %>
  <%= f.text_field :user_comment %>

  <%= f.submit "Post Comment", class: "form_label" %>
<% end %>
